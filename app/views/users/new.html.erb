<h1>登録画面</h1>
<%= form_with model: @user, url: user_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %> 
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %> 
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %> 
  </div>

  <div>
    <%= f.submit "Sign up!! " %>
  </div>
<% end %>

<p>アカウントがある場合 <%= link_to "login !", login_path %> </p>